<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <EditText
            android:layout_width="300dp"
            android:layout_height="200dp"
            android:inputType="text"
            android:ems="10"
            android:id="@+id/editTextTextMessage"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="92dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.497"
            android:hint="Message"
            android:layout_marginBottom="52dp" app:layout_constraintBottom_toTopOf="@+id/editTextTextNumber"/>
    <EditText
            android:layout_width="300dp"
            android:hint="Number"
            android:layout_height="48dp"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/editTextTextNumber"
            app:layout_constraintTop_toBottomOf="@+id/editTextTextMessage"
            android:layout_marginTop="52dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:minHeight="48dp"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/button"
            app:layout_constraintTop_toBottomOf="@+id/editTextTextNumber"
            android:layout_marginTop="32dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:text="Send" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.498" app:layout_constraintVertical_bias="0.0"/>
</androidx.constraintlayout.widget.ConstraintLayout>